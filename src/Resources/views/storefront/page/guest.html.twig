{% sw_extends "@Storefront/storefront/base.html.twig" %}

{% block base_content %}
   {% block guest_section %}
    <div class="container">
        <div class="row mt-5">
            <div class="guest-btn guest-block">
                <h3 class="font-weight-bold">Konto einloggen/Registrieren</h3>
            <a class="btn btn-primary mt-2 guest-p1 button-cidaas" href="{{ path('cidaas.login', {'_locale': app.request.locale}) }}?redirect_to=frontend.checkout.confirm.page">Mit Konto fortfahren</a>

                <h3 class="font-weight-bold mt-5">Ohne Konto</h3>
                <a class="btn btn-primary mt-2 guest-p1 button-guest" href="{{ path('cidaas.guest.register.page', {}, app.request.locale) }}">Als Gast fortfahren</a>
            </div>
        </div>
    </div>
   {% endblock %}
{% endblock %}
